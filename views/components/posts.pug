extends ../layout

block content
  .posts
    div(id='')
      .row
        .col-md-4
          .row
            .book-form.search-lateral
              .col-md-12
                h1(style='margin-bottom: 20px') Â¡Hola, Julio! Vamos a empezar creando una publicacion.
              form(id="createPost")
                .col-md-12
                  label Nombre
                  input.lys-location__input(id="nameId" name="name")
                .col-md-12
                  label Descripcion
                  input.lys-location__input(id="descriptionId" name="description")
                .col-md-12
                  label Destino
                  input.lys-location__input(id="destinationId" name="destination")
                .col-md-6
                  input(type='submit' v-on:click="addPost" )
        .col-md-8(style='padding: 2em 2em 7em 2em;')
          .row
            .col-md-12#vposts 
              .col-md-6(v-for="post in posts")
                img.img-responsive(src='images/about1.jpg', alt='')
                h4 {{post.name}}
                p  {{post.description}}
                div
                  button.btn.btn-primary Ver mas
block scripts
    script(type='text/javascript', src='/client/posts.js')

